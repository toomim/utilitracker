{
	"name": "Utilitracker V2.0",
	"version": "2.0",
	"manifest_version": 2,
	"description": "Ground-up implementation of our extension",
	"background": {
		"page": "background.html"
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"tabs", 
		"storage",
	       "notifications"
	],
	"web_accessible_resources": [
		"icon.png"
	],

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["inline.js"],
			"run_at": "document_end"
		}
	]
}
